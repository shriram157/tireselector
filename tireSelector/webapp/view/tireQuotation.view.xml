<mvc:View xmlns:u="sap.ui.unified" xmlns:tnt="sap.tnt" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="tireSelector.controller.tireQuotation"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<App>
		<pages>
			<Page showNavButton="false" class="stylePageSection customStyle" id="idTireQuotation">
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/LexusNew.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentMiddle><Text text="" id="selectedModelText"/></contentMiddle>
						<contentRight>
							<Button text="{i18n>Logout}" type="Default"/>
						</contentRight>
					</Bar>
				</customHeader>
				<tnt:ToolHeader backgroundDesign="Translucent">
					<Link text="{i18n>PageTitle}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>ProductMarkups}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>ReportError}" class="clCustomFont sapUiSmallMargin" press="onShareEmailPress"/>
				</tnt:ToolHeader>
				<content>
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<l:content>
							<Breadcrumbs currentLocationText="{i18n>PrepareQuote}"></Breadcrumbs>
						</l:content>
					</l:VerticalLayout>
					<MessageStrip id="ID_ErrMsgStrip" showIcon="true" showCloseButton="false" visible="false" type="Error" class="customMargin"/>
					<OverflowToolbar class="noBottomBorder">
						<Label text="{i18n>DealerCodeName}" design="Bold" class="styleFontSize customMargin"/>
						<ToolbarSpacer/>
						<Button text="{i18n>SelectDifferentTire}" type="Emphasized" press="SelectDifferentTire"/>
					</OverflowToolbar>
					<f:SimpleForm id="form_TireQuotation" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="true" columnsXL="2" columnsL="2"
						columnsM="2" singleContainerFullSize="false" class="form_TireQuotation">
						<f:content>
							<core:Title text=""/>
							<Label text=""/>
							<Text text="{DealerModel>/attributes/0/BusinessPartnerName}"/>
							<Label text=""/>
							<Text text="{DealerModel>/attributes/0/BusinessPartnerAddress}"/>
							<Label text=""/>
							<Text text="{DealerModel>/attributes/0/BusinessPartnerPhone}"/>
							<Label text="{i18n>DealerTel}"/>
							<Input type="Number" value="1234567890"/>
							<Label text="{i18n>QuoteDate}" required="true"/>
							<!--<Input type="Number" value="" required="true" id="id_QuoteDate"/>-->
							<DatePicker id="id_QuoteDate" value="" valueFormat="MM-dd-yyyy" displayFormat="MM-dd-yyyy" change="handleQuoteDateChange" class="sapUiSmallMarginBottom" />
							<Label text="{i18n>AfterExpiry}" required="true"/>
							<!--<Input type="Number" value="" required="true" id="id_AfterExpiry"/>-->
							<DatePicker id="id_AfterExpiry" value="" valueFormat="MM-dd-yyyy" displayFormat="MM-dd-yyyy" change="handleExpiryChange" class="sapUiSmallMarginBottom" />
							<core:Title text=""/>
							<Label text="{i18n>Vehicle}"/>
							<Input type="Text" value="{propertiesModel>/vehicleVal} {propertiesModel>/modelval}"/>
							<Label text="{i18n>VIN}"/>
							<Input type="Text" value="{propertiesModel>/vinVal}"/>
							<Label text="{i18n>Name}"/>
							<Input type="Text" value=""/>
							<Label text="{i18n>Address}"/>
							<Input type="Text" value=""/>
							<Label text="{i18n>PostalCode}"/>
							<Input type="Text" value=""/>
							<Label text="{i18n>Phone}"/>
							<Input type="Number" value=""/>
							<Label text="{i18n>CreditApp}"/>
							<Input type="Text" value=""/>
						</f:content>
					</f:SimpleForm>
					<Table inset="false" id="tableQuotation">
						<columns>
							<Column demandPopin="true">
								<Text text=""/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" width="10rem" hAlign="Center">
								<Text text="{i18n>UnitPrice}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" width="10rem" hAlign="Center">
								<Text text="{i18n>Quantity}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" width="10rem" hAlign="Center">
								<Text text="{i18n>Price}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<Label text="{i18n>Tires}"/>
										<Text text="{TireQuotationModel>/results/0/TireSize} - {TireQuotationModel>/results/0/Material}"/>
									</VBox>
									<Input value="{TireQuotationModel>/results/0/Retails}" required="true" id="id_tireUnitPrice" editable="false"/>
									<Input value="" required="true" id="id_tireQty" liveChange="calculatePrice"/>
									<Input value="{TireQuotationModel>/prices/0/TiresPrice}" id="id_tirePrice" editable="false"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<HBox>
											<Label text="{i18n>RoadHazardProtection}"/>
											<Label text=" ({i18n>AgreementText})" class="noCustomColor"/>
										</HBox>
										<Select id="id_RHP" forceSelection="false" selectedKey="" width="100%" items="{ProductCategoryModel>/results}" change="onMatSelection">
											<core:Item key="{ProductCategoryModel>MATNR}" text="{ProductCategoryModel>MATNR}"/>
										</Select>
									</VBox>
									<Input value="{TireQuotationModel>/results/0/RHPPRice}" id="id_RHPUnitPrice" editable="false"/>
									<Input value="" id="id_RHPsQty" liveChange="calculatePrice"/>
									<Input value="{TireQuotationModel>/prices/0/RHPPrice}" id="id_RHPPrice" editable="false"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<Label text="{i18n>MountingAndBalancing}"/>
									</VBox>
									<Input value="" visible="{propertiesModel>/enableInput}"/>
									<Input value="" visible="{propertiesModel>/enableInput}"/>
									<Input value="{TireQuotationModel>/prices/0/MnBPrice}" id="id_MnBPrice" liveChange="onValueChange"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<Label text="{i18n>Wheels}"/>
										<TextArea placeholder="Enter Text" growing="true" growingMaxLines="3" width="100%"/>
									</VBox>
									<Input value="" required="true" id="id_wheelsUnitPrice" liveChange="getUnitPrice"/>
									<Input value="" required="true" id="id_wheelsQty" liveChange="calculatePrice"/>
									<Input value="{TireQuotationModel>/prices/0/WheelsPrice}" id="id_wheelsPrice" editable="false" />
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<Label text="{i18n>TPMS}"/>
										<TextArea placeholder="Enter Text" growing="true" growingMaxLines="3" width="100%"/>
									</VBox>
									<Input value="" required="true" id="id_TPMSUnitPrice" liveChange="getUnitPrice"/>
									<Input value="" required="true" id="id_TPMSQty" liveChange="calculatePrice"/>
									<Input value="{TireQuotationModel>/prices/0/TPMSPrice}" id="id_TPMSPrice" editable="false"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<Label text="{i18n>FittingKits}"/>
										<TextArea placeholder="Enter Text" growing="true" growingMaxLines="3" width="100%"/>
									</VBox>
									<Input value="" required="true" id="id_FittingKitUnitPrice" liveChange="getUnitPrice"/>
									<Input value="" required="true" id="id_FittingKitQty" liveChange="calculatePrice"/>
									<Input value="{TireQuotationModel>/prices/0/FittingKitPrice}" id="id_FittingKitPrice" editable="false"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<Label text="{i18n>OtherItems}"/>
										<Input value=""/>
									</VBox>
									<Label text=""/>
									<Label text=""/>
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<Input value="{TireQuotationModel>/prices/0/otherItemPrice1}" required="true" id="id_OtherItemPrice" liveChange="onValueChange"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<Input value=""/>
									</VBox>
									<Label text=""/>
									<Label text=""/>
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<Input value="{TireQuotationModel>/prices/0/otherItemPrice2}" required="true" id="id_OtherItem2Price" liveChange="onValueChange"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<Input value=""/>
									</VBox>
									<Label text=""/>
									<Label text=""/>
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<Input value="{TireQuotationModel>/prices/0/otherItemPrice3}" required="true" id="id_OtherItem3Price" liveChange="onValueChange"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<Input value=""/>
									</VBox>
									<Label text=""/>
									<Label text=""/>
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<Input value="{TireQuotationModel>/prices/0/otherItemPrice4}" required="true" id="id_OtherItem4Price" liveChange="onValueChange"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns alignRight">
								<cells>
									<Label text=""/>
									<Label text=""/>
									<VBox>
										<Label text="{i18n>SubTotal}"/>
									</VBox>
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<Input value="" id="id_subTotal" liveChange="onValueChange"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns alignRight" visible="{propertiesModel>/enableFee}">
								<cells>
									<Label text=""/>
									<Label text=""/>
									<VBox>
										<Label text="{i18n>EHFCharges}" id="id_EHFDescp"/>
									</VBox>
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<!--<Input value="" visible="{propertiesModel>/enableInput}"/>-->
									<Input value="{TireQuotationModel>/results/0/EHFPRice}" id="id_freeDescp"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns alignRight" visible="{propertiesModel>/enableFTC}">
								<cells>
									<Label text=""/>
									<Label text=""/>
									<VBox>
										<Label text="{i18n>FederalTax}" id="id_fedTaxCodeDesc"/>
									</VBox>
									<Input value="{TireQuotationModel>/results/0/FederalTax}" id="id_fedTaxCode" editable="false"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns alignRight" visible="{propertiesModel>/enablePTC}">
								<cells>
									<Label text=""/>
									<Label text=""/>
									<VBox>
										<Label text="{i18n>ProvincialTax}" id="id_proTaxCodeDesc"/>
									</VBox>
									<Input value="{TireQuotationModel>/results/0/ProvincialTax}" id="id_proTaxCode" editable="false"/>
								</cells>
							</ColumnListItem>
							<ColumnListItem class="styleColumns alignRight">
								<cells>
									<Label text=""/>
									<Label text=""/>
									<VBox>
										<Label text="{i18n>Total}"/>
									</VBox>
									<Input value="" id="id_total"/>
								</cells> 
							</ColumnListItem>
							<ColumnListItem class="styleColumns">
								<cells>
									<VBox>
										<Label text="{i18n>DealerMessage}"/>
										<TextArea placeholder="Enter Text" growing="true" growingMaxLines="3" maxLength="1000" showExceededText="true" width="100%"/>
									</VBox>
									<Input value="" visible="{propertiesModel>/enableInput}"/>
									<Input value="" visible="{propertiesModel>/enableInput}"/>
									<Input value="" visible="{propertiesModel>/enableInput}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<OverflowToolbar class="noBottomBorder">
						<Label text="{i18n>Disclaimer}"/>
						<ToolbarSpacer/>
						<!--<Button text="{i18n>PrintQuote}" type="Emphasized" press="generatePDF"/>-->
						<Button press="generatePDF" icon="sap-icon://print" data:targetId="idTireQuotation" type="Emphasized"  text="{i18n>PrintQuote}"/>
					</OverflowToolbar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
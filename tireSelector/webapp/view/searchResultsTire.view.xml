<mvc:View xmlns:u="sap.ui.unified" xmlns:tnt="sap.tnt" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" controllerName="tireSelector.controller.searchResultsTire"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showNavButton="false" class="stylePageSection customStyle">
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/LexusNew.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentMiddle><Text text="" id="selectedModelText"/></contentMiddle>
						<contentRight>
							<Button text="{i18n>Logout}" type="Default"/>
						</contentRight>
					</Bar>
				</customHeader>
				<tnt:ToolHeader backgroundDesign="Translucent">
					<Link text="{i18n>PageTitle}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>ProductMarkups}" visible="{FitmentPageModel>/enableProdMarkup}" class="clCustomFont sapUiSmallMargin"
						press="onMenuLinkPress"/>
					<Link text="{i18n>ReportError}" class="clCustomFont sapUiSmallMargin" press="onShareEmailPress"/>
				</tnt:ToolHeader>
				<content>
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<l:content>
							<Breadcrumbs currentLocationText="{i18n>SelectTire}">
								<Link press="onPressBreadCrumb" text="{i18n>PageTitle}"/>
							</Breadcrumbs>
						</l:content>
					</l:VerticalLayout>
					<OverflowToolbar class="noBottomBorder">
						<Label text="{DealerModel>/DealerData/DealerCode} - {DealerModel>/DealerData/BusinessPartnerName}" design="Bold"
							class="styleFontSize customMargin"/>
						<ToolbarSpacer/>
						<Button text="{i18n>BackToSearch}" type="Emphasized" press="NavBackToSearch"/>
					</OverflowToolbar>
					<VBox id="idVBox" class="facetStyle">
						<items>
							<FacetFilter id="idFacetFilter" type="Simple" showPopoverOKButton="true" showPersonalization="true" showReset="true" reset="handleFacetFilterReset"
								confirm="handleFacetConfirm" lists="{TireFitmentJSONModel>/Filters}">
								<lists>
									<FacetFilterList title="{TireFitmentJSONModel>type}" key="{TireFitmentJSONModel>text}" mode="MultiSelect"
										items="{path:'TireFitmentJSONModel>values', templateShareable: 'true'}">
										<items>
											<FacetFilterItem text="{TireFitmentJSONModel>text}" key="{TireFitmentJSONModel>text}"/>
										</items>
									</FacetFilterList>
								</lists>
							</FacetFilter>
						</items>
					</VBox>
					<HBox class="customStyleBox">
						<t:Table id="idTireSelectionTable" class="idTireSelectionTable" cellClick="onRowPress" selectionBehavior="Row" selectionMode="None"
							rows="{TireFitmentJSONModel>/results}" visibleRowCount="8">
							<t:toolbar>
								<Toolbar>
									<CheckBox text="Show Dealer Net" select="onCheckPress" id="checkDealerNet"/>
									<CheckBox text="Use Preview Markup" select="onCheckPreview" id="checkPreview"/>
									<!--<Button text="Open View Settings Dialog in Filter view" press="handleOpenDialogFilter"/>-->
								</Toolbar>
							</t:toolbar>
							<t:columns>
								<t:Column id="ID_TireFitment" sortProperty="Tire Fitment" filterProperty="Tire Fitment" width="7rem">
									<Label text="{i18n>TireFitment}"/>
									<t:template>
										<Text text="{path:'TireFitmentJSONModel>Tire Fitment'}" app:colorClass="{TireFitmentJSONModel>colorCell}" wrapping="false" id="cell_Fitment">
											<customData>
										<core:CustomData key="colorClass" value="{ path:'TireFitmentJSONModel>Tire Fitment'}" writeToDom="true"/>
											</customData>
										</Text>
										<!--{path:'TireFitmentJSONModel>Profit', formatter: '.decimalFormatter'}-->
									</t:template>
								</t:Column>
								<t:Column sortProperty="Tire Category" filterProperty="Tire Category" width="7rem">
									<Label text="{i18n>TireCategory}"/>
									<t:template>
										<Text class="TextPaddig" text="{TireFitmentJSONModel>Tire Category}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="Tire Brand" filterProperty="Tire Brand" width="20rem">
									<Label text="{i18n>TireBrandDesc}"/>
									<t:template>
										<Text class="TextPaddig" text="{TireFitmentJSONModel>Tire Brand}-{TireFitmentJSONModel>MatDesc_EN}-{TireFitmentJSONModel>TireSize}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="Tire Load Rating" filterProperty="Tire Load Rating" width="7rem">
									<Label text="{i18n>LoadRating}"/>
									<t:template>
										<Text text="{TireFitmentJSONModel>Tire Load Rating}" class="TextPaddig" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="Tire Speed Rating" filterProperty="Tire Speed Rating" width="7rem">
									<Label text="{i18n>SpeedRating}"/>
									<t:template>
										<Text text="{TireFitmentJSONModel>Tire Speed Rating}" class="TextPaddig" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="Material" filterProperty="Material">
									<Label text="{i18n>TCIPartNumber}" wrapping="false"/>
									<t:template>
										<Text text="{TireFitmentJSONModel>Material}" class="TextPaddig" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="Tire MFG Part No" filterProperty="Tire MFG Part No">
									<Label text="{i18n>MfPartNumber}" wrapping="false"/>
									<t:template>
										<Text text="{TireFitmentJSONModel>Tire MFG Part No}" class="TextPaddig" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column id="ID_DealerNet" sortProperty="DealerNet" filterProperty="DealerNet" visible="{FitmentPageModel>/enableDealerNet}" width="6rem">
									<Label text="{i18n>DealerNet}" wrapping="false"/>
									<t:template>
										<Text text="{path:'TireFitmentJSONModel>DealerNet', formatter: '.decimalFormatter'}" class="TextPaddig" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column id="ID_Profit" sortProperty="Profit" filterProperty="Profit" visible="{FitmentPageModel>/enableProfit}" width="6rem">
									<Label text="{i18n>Profit}" wrapping="false"/>
									<t:template>
										<Text text="{path:'TireFitmentJSONModel>Profit', formatter: '.decimalFormatter'}" class="TextPaddig" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="Retails" filterProperty="Retails" width="6rem">
									<Label text="{i18n>Retail}" wrapping="false"/>
									<t:template>
										<Text text="{path:'TireFitmentJSONModel>Retails', formatter: '.decimalFormatter'}" class="TextPaddig" wrapping="false"/>
									</t:template>
								</t:Column>
							</t:columns>
						</t:Table>
					</HBox>
					<!--<Button text="NextPage" type="Emphasized" press="onRowPress"/>-->
				</content>
				<footer>
					<Toolbar>
						<!--<ToolbarSpacer/>-->
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>
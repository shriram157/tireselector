<mvc:View xmlns:u="sap.ui.unified" xmlns:tnt="sap.tnt" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" controllerName="tireSelector.controller.searchResultsTire"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showNavButton="false" class="stylePageSection customStyle">
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/LexusNew.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentMiddle><Text text="" id="selectedModelText"/></contentMiddle>
						<contentRight>
							<Button text="{i18n>Logout}" type="Default"/>
						</contentRight>
					</Bar>
				</customHeader>
				<tnt:ToolHeader backgroundDesign="Translucent">
					<Link text="{i18n>PageTitle}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>ProductMarkups}" visible="{FitmentPageModel>/enableProdMarkup}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>ReportError}" class="clCustomFont sapUiSmallMargin" press="onShareEmailPress"/>
				</tnt:ToolHeader>
				<content>
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<l:content>
							<Breadcrumbs currentLocationText="{i18n>SelectTire}">
								<Link press="onPressBreadCrumb" text="{i18n>PageTitle}"/>
							</Breadcrumbs>
						</l:content>
					</l:VerticalLayout>
					<OverflowToolbar class="noBottomBorder">
						<Label text="{DealerModel>/DealerData/DealerCode} - {DealerModel>/DealerData/DealerName}" design="Bold" class="styleFontSize customMargin"/>
						<ToolbarSpacer/>
						<Button text="{i18n>BackToSearch}" type="Emphasized" press="NavBackToSearch"/>
					</OverflowToolbar>
					<VBox id="idVBox" class="facetStyle">
						<items>
							<FacetFilter id="idFacetFilter" type="Simple" showPersonalization="true" showReset="true" reset="handleFacetFilterReset"
								confirm="handleFacetConfirm" lists="{TireFitmentJSONModel>/Filters}">
								<lists>
									<FacetFilterList title="{TireFitmentJSONModel>type}" key="{TireFitmentJSONModel>text}" mode="MultiSelect" items="{path:'TireFitmentJSONModel>values', templateShareable: 'true'}">
										<items>
											<FacetFilterItem text="{TireFitmentJSONModel>text}" key="{TireFitmentJSONModel>text}"/>
										</items>
									</FacetFilterList>
								</lists>
							</FacetFilter>
						</items>
					</VBox>
					<HBox class="customStyleBox">
						<t:Table id="idTireSelectionTable" class="idTireSelectionTable" cellClick="onRowPress" selectionBehavior="Row" selectionMode="None"
							rows="{TireFitmentJSONModel>/results}" visibleRowCount="7">
							<t:toolbar>
								<Toolbar>
									<CheckBox text="Show Dealer Net" select="onCheckPress" id="checkDealerNet"/>
									<CheckBox text="Use Preview Markup" select="onCheckPreview" id="checkPreview"/>
								</Toolbar>
							</t:toolbar>
							<t:columns>
								<t:Column id="ID_TireFitment" sortProperty="Tire Fitment" filterProperty="Tire Fitment">
									<Label text="{i18n>TireFitment}"/>
									<t:template>
										<Text text="{path:'TireFitmentJSONModel>Tire Fitment', formatter: '.colorFormatter'}" wrapping="false" id="cell_Fitment" class="displayBlock"/>
										<!--{path:'TireFitmentJSONModel>Profit', formatter: '.decimalFormatter'}-->
									</t:template>
								</t:Column>
								<t:Column sortProperty="Tire Category" filterProperty="Tire Category">
									<Label text="{i18n>TireCategory}"/>
									<t:template>
										<Text text="{TireFitmentJSONModel>Tire Category}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="Tire Brand" filterProperty="Tire Brand">
									<Label text="{i18n>TireBrandDesc}"/>
									<t:template>
										<Text text="{TireFitmentJSONModel>Tire Brand}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="Tire Speed Rating" filterProperty="Tire Speed Rating">
									<Label text="{i18n>Ratings}"/>
									<t:template>
										<Text text="{TireFitmentJSONModel>Tire Speed Rating} {TireFitmentJSONModel>Tire Load Rating}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="Material" filterProperty="Material">
									<Label text="{i18n>PartNumber}" wrapping="false"/>
									<t:template>
										<Text text="{TireFitmentJSONModel>Material}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column id="ID_DealerNet" sortProperty="DealerNet" filterProperty="DealerNet" visible="{FitmentPageModel>/enableDealerNet}">
									<Label text="{i18n>DealerNet}" wrapping="false"/>
									<t:template>
										<Text text="{path:'TireFitmentJSONModel>DealerNet', formatter: '.decimalFormatter'}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column id="ID_Profit" sortProperty="Profit" filterProperty="Profit" visible="{FitmentPageModel>/enableProfit}">
									<Label text="{i18n>Profit}" wrapping="false"/>
									<t:template>
										<Text text="{path:'TireFitmentJSONModel>Profit', formatter: '.decimalFormatter'}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="Retails" filterProperty="Retails">
									<Label text="{i18n>Retails}" wrapping="false"/>
									<t:template>
										<Text text="{path:'TireFitmentJSONModel>Retails', formatter: '.decimalFormatter'}" wrapping="false"/>
									</t:template>
								</t:Column>
							</t:columns>
						</t:Table>
					</HBox>
					<!--<Button text="NextPage" type="Emphasized" press="onRowPress"/>-->
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
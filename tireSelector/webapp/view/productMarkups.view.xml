<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
	controllerName="tireSelector.controller.productMarkups" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showNavButton="false" class="stylePageSection customStyle">
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/LexusNew.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentRight>
							<Button text="{i18n>Logout}" type="Default"/>
						</contentRight>
					</Bar>
				</customHeader>
				<tnt:ToolHeader backgroundDesign="Translucent">
					<Link text="{i18n>PageTitle}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>ProductMarkups}" visible="{propertiesModel>/enableProdMarkup}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>ReportError}" class="clCustomFont sapUiSmallMargin" press="onShareEmailPress"/>
				</tnt:ToolHeader>
				<content>
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<l:content>
							<Breadcrumbs id="ID_curCrumbText" currentLocationText="{i18n>ProductMarkups}">
								<Link press="onPressBreadCrumb" text="{i18n>PageTitle}"/>
							</Breadcrumbs>
						</l:content>
					</l:VerticalLayout>
					<OverflowToolbar class="noBottomBorder">
						<Label text="{DealerModel>/DealerData/DealerCode} - {DealerModel>/DealerData/DealerName}" design="Bold" class="styleFontSize customMargin"/>
						<ToolbarSpacer/>
						<Button text="{i18n>SavePreview}" type="Emphasized" press="updateXSATable"/>
						<Button text="{i18n>MakePreviewLive}" type="Emphasized" press="updateXSALiveTable"/>
					</OverflowToolbar>
					<Table id="ID_ProdMarkupsTable" inset="false" items="{ path: 'ProdMarkupModel>/results', sorter: { path: 'Manufacturer' } }">
						<columns>
							<Column demandPopin="true">
								<Text text="{i18n>Manufacturer}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
								<Text text="{i18n>Preview}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="{i18n>Live}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="{i18n>LastUpdated}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="{i18n>LastUpdatedBy}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem vAlign="Middle">
								<cells>
									<Text text="{ProdMarkupModel>Manufacturer_code}"/>
									<!--<Text text="{ProdMarkupModel>Preview_Markup_Percentage}"/>-->
									<Input type="Text" value="{ProdMarkupModel>Preview_Markup_Percentage}"/>
									<Text text="{ProdMarkupModel>Live_Markup_Percentage}"/>
									<Text text="{ProdMarkupModel>Live_Last_Updated}"/>
									<Text text="{ProdMarkupModel>Live_Last_Updated_By}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
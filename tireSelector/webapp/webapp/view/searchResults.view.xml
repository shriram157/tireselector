<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	controllerName="app.toyota.tireselector.ui5_tireselector.controller.searchResults" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<App>
		<pages>
			<Page showNavButton="false" class="stylePageSection customStyle">
				<customHeader>
					<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
						<contentLeft>
							<Image id="idLexusLogo" src="images/LexusNew.png" width="100px"/>
							<Text text="|" class="sapUiTinyMarginBeginEnd"/>
							<Text class="clCustomFont" text="{i18n>PageTitle}"/>
						</contentLeft>
						<contentRight>
							<!--<Link text="{i18n>PageTitle}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>-->
							<!--<Link text="{i18n>ProductMarkups}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>-->
							<!--<Link type="Transparent" text="{i18n>ReportError}" class="clCustomFont sapUiSmallMargin" press="onShareEmailPress"/>-->
							<Button text="{i18n>Logout}" type="Default"/>
						</contentRight>
					</Bar>
				</customHeader>
				<tnt:ToolHeader backgroundDesign="Translucent">
					<Link text="{i18n>PageTitle}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link text="{i18n>ProductMarkups}" class="clCustomFont sapUiSmallMargin" press="onMenuLinkPress"/>
					<Link type="Transparent" text="{i18n>ReportError}" class="clCustomFont sapUiSmallMargin" press="onShareEmailPress"/>
				</tnt:ToolHeader>
				<content>
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<l:content>
							<Breadcrumbs id="ID_curCrumbText" currentLocationText="{SearchResultModel>/SearchOptionVal}">
								<Link press="onPressBreadCrumb" text="{i18n>PageTitle}"/>
							</Breadcrumbs>
						</l:content>
					</l:VerticalLayout>
					<OverflowToolbar class="noBottomBorder">
						<Label text="{i18n>DealerCodeName}" design="Bold" class="styleFontSize customMargin"/>
						<ToolbarSpacer/>
						<Button text="{i18n>BackToSearch}" type="Emphasized" press="NavBackToSearch"/>
					</OverflowToolbar>
					<Table id="idSearchresultsTable" inset="false" items="{ path: 'SearchResultModel>/FitmentData', sorter: { path: 'Model' } }">
						<columns>
							<Column demandPopin="true">
								<Text text="{i18n>Model}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>Package}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>TireSize}"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="{i18n>RimSize}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Navigation" press="navToSelectTire">
								<cells>
									<Text text="{SearchResultModel>Model}"/>
									<Text text="package"/>
									<Text text="{SearchResultModel>ZtireSize}"/>
									<Text text="{SearchResultModel>ZrimSize}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<!--<footer>-->
				<!--	<Toolbar>-->
				<!--		<ToolbarSpacer/>-->
				<!--		<Button press="onPrintBtnPress" text="Print" data:targetId="idSearchresultsTable" icon="sap-icon://print"/>-->
				<!--	</Toolbar>-->
				<!--</footer>-->
			</Page>
		</pages>
	</App>
</mvc:View>